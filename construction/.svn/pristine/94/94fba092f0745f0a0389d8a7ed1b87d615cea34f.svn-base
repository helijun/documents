/** 可以使用@extend 公用的代码 **/
//flex布局
//居左
.extend-flex-left-center {
	display: flex;
	justify-content: left;
	align-items: center;
}
//居右
.extend-flex-right-center {
	display: flex;
	justify-content: right;
	align-items: center;
}
//居中
.extend-flex-center-center {
	display: flex;
	justify-content: center;
	align-items: center;
}
//登录注册部分的头部
.extend-full-btn {//实心按钮
	background-color: $base-color !important;
	border-color: $base-color !important;
}
.extend-empty-btn {//空心按钮
	color: $base-color !important;
	border-color: $base-color !important;
	border: 1px solid;
	background-color: white;
}

//登录系列页面头部公用
.extend-login-header {
	header {
		height: 10%;
		padding: 0 5%;
		background-color: white;
		box-shadow: 0px 5px 5px 0px 
		rgba(230, 233, 237, 0.75);

		.module-go-login {
			font-size: 18px;
			line-height: 18px;
			color: #6e7b7d;
			cursor: pointer;

			&:hover {
				color: $base-color;
			}
		}
		.module-go-back {
			color: #6e7b7d;
			cursor: pointer;

			&:hover {
				text-decoration: underline;
			}
			
		}
	}
}
//右主内容区公共样式
.extend-article {
	height: 100%;
	overflow-y: auto;
	background-color: $article-color;
	margin: $module-container-padding;
	border-top-left-radius: 5px;
	border-top-right-radius: 5px;
}
//所有页面添加条形
.extend-add {
	text-align: center;
	height: 40px;
	line-height: 40px;
	font-size: 15px;
	color: #999;
	border: 1px dashed $base-bg-color;
	cursor: pointer;

	&:hover {
		color: $base-color;
		border: 1px dashed $base-color;
	}
}
//改造layui select 部分样式
.layui-form-select {
	dl {
		text-align: center;
	}
}

//改造layui checkbox 部分样式
.extend-form-checkbox {
	.layui-form-checkbox[lay-skin="primary"]:hover i {
		border-color: $base-color;
	}
	.layui-form-checked[lay-skin="primary"] i {
		border-color: $base-color;
	background-color: $base-color;
	}
}
//改造layui date 部分样式
.extend-layer-date {
	.layui-laydate-footer span:hover {
		color: $base-color !important;
	}
	.layui-laydate-content td.laydate-selected {
		background-color: #f8fafb;
	}
	.laydate-selected:hover {
		background-color: $base-color !important;
	}
	.layui-laydate .layui-this {
		background-color: $base-color !important;
		color: #fff!important;
	}
}
//改造layui radio 部分样式
.extend-layui-radio {
	.layui-form-radio i:hover, .layui-form-radioed i {
		color: $base-color;
	}
}
//改造layui table 部分样式
.extend-layui-table {
	.layui-table tbody tr:hover, .layui-table thead tr, .layui-table-click, .layui-table-header, .layui-table-hover, .layui-table-mend, .layui-table-patch, .layui-table-tool, .layui-table[lay-even] tr:nth-child(even) {
		background-color: #f8fafb;
	}
	.layui-table-sort[lay-sort=desc] .layui-table-sort-desc{
		border-top-color: $base-color;
	}
	.layui-table-sort[lay-sort=asc] .layui-table-sort-asc {
		border-top-color: $base-color;
		border-bottom-color: $base-color;
	}
}

//改造layui dialog部分样式
.extend-layer-dialog {
	.skin-flex-center {
		.layui-layer-content {
			@extend .extend-flex-center-center;
			font-size: 14px;
			color: #222124;
		}
	}
	.layui-layer-title {
		background-color: #ffffff;
		border: 0;
		font-size: 18px;
		color: #596466;
	}
	.layui-form-select dl dd.layui-this {
		background-color: $base-color;
	}
	.layui-layer-btn0 {
		@extend .extend-full-btn;
		border-radius: 5px;
		width: 120px;
		height: 40px !important;
		line-height: 40px !important;
		text-align: center;
		font-size: 14px;
		color: #feffff;
		box-shadow: 0px 5px 6px 0px 
		rgba(179, 221, 218, 0.35);
	}
	.layui-layer-btn1 {
		@extend .extend-empty-btn;
		width: 120px;
		height: 40px !important;
		height: 40px !important;
		line-height: 40px !important;
		text-align: center;
		border-radius: 5px;
		font-size: 14px;
		color: #feffff;
		box-shadow: 0px 5px 6px 0px 
		rgba(179, 221, 218, 0.35);
	}
}

//改造layui page分页样式
.extend-layer-laypage {
	.layui-table-page {
		text-align: right;
		margin-top: 24px;
		border: none;
	}
	.layui-table tbody tr:hover, .layui-table thead tr, .layui-table-click, .layui-table-header, .layui-table-hover, .layui-table-mend, .layui-table-patch, .layui-table-tool, .layui-table[lay-even] tr:nth-child(even) {
		background-color: #f8fafb;
	}
	.layui-table-sort[lay-sort=desc] .layui-table-sort-desc{
		border-top-color: $base-color;
	}
	.layui-table-sort[lay-sort=asc] .layui-table-sort-asc {
		border-top-color: $base-color;
		border-bottom-color: $base-color;
	}
}
/** @extends end **/
